BOOST_AUTO_TEST_CASE(point_test, * utf::tolerance(0.0001)) 
{

    point p(0, 0, 0);
    point p2(10, 0, 0);

    BOOST_TEST(point::distance(&p, &p2) == 10);

    point p3(15, 10, 20);
    BOOST_TEST(point::distance(&p, &p3) == 26.925824);


}


